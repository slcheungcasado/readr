  }

  const toggleButtonType = ($button) => {
    if ($button.hasClass('btn-outline-success')) {
      $button.removeClass('btn-outline-success');
      $button.addClass('btn-outline-danger');
      $button.find('span').text('Remove Bookmark');
    } else {
