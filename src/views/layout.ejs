  <script>
    window.parseFormData = (formData) => {
      const parsed = {}

      Array.from(formData.entries()).forEach((data) => {
        _.set(parsed, data[0], data[1] || '')
      })

      return parsed
    }

    const toggleLoadOverLay = (e) => {
      $(".loading-overlay").toggleClass('visually-hidden');
    }

    const showMessage = ({
      msg = '',
      type = 'success'
    }) => {

      let bgColorClass = '';
      switch (type) {
        case "primary":
          bgColorClass = 'text-bg-primary';
          break;
        case "secondary":
          bgColorClass = 'text-bg-secondary';
          break;
        case "success":
          bgColorClass = 'text-bg-success';
          break;
        case "danger":
          bgColorClass = 'text-bg-danger';
          break;
        case "warning":
          bgColorClass = 'text-bg-warning';
          break;
        case "light":
          bgColorClass = 'text-bg-light';
          break;
        case "dark":
          bgColorClass = 'text-bg-dark';
          break;
        case "info":
        default:
          bgColorClass = 'text-bg-info';
          break;
      }
      const bgColors = ['text-bg-primary',
        'text-bg-secondary',
        'text-bg-success',
        'text-bg-danger',
        'text-bg-warning',
        'text-bg-light',
        'text-bg-dark',
        'text-bg-info'
      ]

      const $msgPanel = $(".user-action-feedback-log");
      $msgPanel.removeClass(bgColors.join(' '));
      $msgPanel.addClass(bgColorClass);
      $msgPanel.text(msg);
      $msgPanel.removeClass('fadeOut');
      $msgPanel.addClass('fadeIn');
      setTimeout(function() {
        $msgPanel.removeClass('fadeIn');
        $msgPanel.addClass('fadeOut');
      }, 2000);
    }

    $(document).ready(() => {
      // $('form').on('submit', toggleLoadOverLay);
    })
  </script>
