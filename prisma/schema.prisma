generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int          @id @default(autoincrement())
  username     String       @default(uuid())
  email        String       @unique
  passwordHash String
  avatar       String?
  readingList  ReadingList?
}

model ReadingList {
  id                 Int                  @id @default(autoincrement())
  title              String               @default("My List")
  userId             Int                  @unique
  user               User                 @relation(fields: [userId], references: [id])
  readingListArticle ReadingListArticle[]
}

model ReadingListArticle {
  id            Int         @id @default(autoincrement())
  readingListId Int
  articleId     Int
  createdAt     DateTime    @default(now())
  article       Article     @relation(fields: [articleId], references: [id])
  readingList   ReadingList @relation(fields: [readingListId], references: [id])
  tags          Tag[]

  @@unique([readingListId, articleId])
}

model Article {
  id                 Int                  @id @default(autoincrement())
  title              String
  url                String               @unique
  pubDate            DateTime?
  relatedLinks       String[]
  content            String?
  description        String?
  image              String?
  author             String?
  readingTime        Int?
  sourceName         String?
  sourceURL          String?
  readingListArticle ReadingListArticle[]
  tags               Tag[]
}

model Tag {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique
  articles           Article[]
  readingListArticle ReadingListArticle[]
}
